class Musico
  attr_accessor :nome, :instrumento
  
  def initialize(nome, instrumento)
    @nome = nome
    @instrumento = instrumento
  end
  
  def tocar_partitura(peca)
    puts "#{@nome} toca a peca #{peca}"
    raise NotImplementedError, "classe tocar_partitura nao implementada"
  end
end

class Violinista < Musico
    
  def tocar_partitura(peca)
  puts "#{@nome} toca seu #{peca}"
  raise NotImplementedError, "classe tocar_partitura nao implementada"
  end
end
  
class Pianista < Musico
    
  def tocar_partitura(peca)
  puts "#{@nome} toca seu #{peca}"
  raise NotImplementedError, "classe tocar_partitura nao implementada"
  end
end

class Maestro
  attr_accessor :equipe
  
  def initialize (equipe = [])
    @equipe = equipe
  end
  
  def iniciar_ensaio
    @equipe.each do M
      M.tocar_partitura
    end
  end
  
end

pessoa1 = Violinista.new("marcelo", "violino")
pessoa2 = Pianista.new("vinicius", "piano")

maestro = Maestro.new([pessoa1,pessoa2])
maestro.iniciar_ensaio()







    
