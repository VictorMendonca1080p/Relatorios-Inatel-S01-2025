use std::io;
fn imprimir_tabuada(numero: i32, limite_inferior: i32, limite_superior: i32)
{
  for i in limite_inferior ..= limite_superior 
  {
    println!("{}", numero * i);
  }
}


fn main() 
{
  println!("Digite um numero para calcularmos a tabuada: ");
  let mut entrada = String::new();
  io::stdin()
      .read_line(&mut entrada)
      .expect("Falha ao ler entrada");

  let numero: i32 = entrada
      .trim()
      .parse()
      .expect("Por favor, digite um número válido");

 println!("Digite o limite inferior: ");
    let mut entrada_inf= String::new();
    io::stdin()
        .read_line(&mut entrada_inf)
        .expect("Falha ao ler entrada");

    let inferior: i32 = entrada_inf
        .trim()
        .parse()
        .expect("Por favor, digite um número válido");
  
  println!("Digite o limite superior: ");
    let mut entrada_sup = String::new();
    io::stdin()
        .read_line(&mut entrada_sup)
        .expect("Falha ao ler entrada");

    let superior: i32 = entrada_sup
        .trim()
        .parse()
        .expect("Por favor, digite um número válido");

imprimir_tabuada(numero, inferior, superior);

 
  
}
