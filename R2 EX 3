function Calculadora (A,B,operator)
  if operator == "+" then
    return A+B
  elseif operator == "-" then
    return A-B
  elseif operator == "*" then
    return A*B
  elseif operator == "/" then
    return A/B
  else
    return "operador invalido"
  end 
end

print ("digte 2 numeros e um operador")
--numeros a serem operados
print ("Numero 1: ")
local A = io.read("*l")
print ("Numero 2: ")
local B = io.read("*l")

--operador a ser usado
print ("operador: ")
local operador = io.read("*l")

print ("resultado: ", Calculadora(A,B,operador))
