using System;
using System.Collections.Generic;

public class Feitico
{
	public string nome {get; private set;}
	
	//construtor
	public Feitico(string Nome)
	{
		this.nome = Nome;
	}
	
	public void Cast()
	{
		Console.WriteLine($"{nome}");
		
	}
}

public class Grimorio
{
	public List<Feitico> spellsColection;
	
	//construtor
	public Grimorio(List<Feitico> SpellList)
	{
		this.spellsColection = SpellList;
	}
	
	//metodos
	public void ADDspell(string SpellName)
	{
		Feitico newSpell = new Feitico("{SpellName}");
		spellsColection.Add(newSpell);
		Console.WriteLine($"Feitico adicionado.");
	}
		
}

public class Ferramentas
{
	private string nome;
	
	//construtor
	public Ferramentas(string NOME)
	{
		this.nome = NOME;
	}
	
	//metodos
	public void Check()
	{
		Console.WriteLine($"{nome}");
	}
	
}

public class Maga
{
	private string nome;
	public Grimorio SpellBook {get; private set;}
	
	public List<Ferramentas> ToolKit;
	
	//construtor
	public Maga(string NOME, List<Ferramentas> TOOLS)
	{
		this.nome = NOME;
		this.ToolKit = TOOLS;
		this.SpellBook = new Grimorio(new List<Feitico>());
	}
	
	//metodos
	public void CheckTools()
	{
		foreach (var item in ToolKit)
		{
			item.Check();
		}
	}
}

					
public class Program
{
	public static void Main()
	{
		List<Ferramentas> DefaultToolkit = new List<Ferramentas>();
		
		DefaultToolkit.Add(new Ferramentas("enxada"));
		DefaultToolkit.Add(new Ferramentas("moedor de alho"));
		DefaultToolkit.Add(new Ferramentas("agulha de trico"));
		
		Maga Friren = new Maga("Friren", DefaultToolkit);
		
		Friren.SpellBook.ADDspell("bola de fogo");
		
		Console.WriteLine($"ferramentas");
		foreach (var item in Friren.ToolKit)
		{
			item.Check();	
		}
		
	}
}
